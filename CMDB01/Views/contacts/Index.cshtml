@model IEnumerable<CMDB01.Models.contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/flipCardS.css" rel="stylesheet" />
@*<script src="~/Scripts/jquery-1.12.4.js"></script>
